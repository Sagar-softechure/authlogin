p Register
form(action="/register" method="post")
  input(type="text" name="username" style="width: 200px;border: 0px;padding: 10px;border-radius: 5px;margin-bottom: 10px;margin-top: 10px;display: block;" placeholder="Username")
  input(type="email" name="email" style="width: 200px;border: 0px;padding: 10px;border-radius: 5px;margin-bottom: 10px;margin-top: 10px;display: block;" placeholder="Email")
  input(type="password" name="password" style="width: 200px;border: 0px;padding: 10px;border-radius: 5px;margin-bottom: 10px;margin-top: 10px;display: block;" placeholder="Password")
  input(type="submit" value="Register")